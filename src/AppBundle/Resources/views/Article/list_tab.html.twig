<div class="highlight row">
	<div class="col-12 mb-2">
		<form class="form-inline hb-article-search" method="post" action="{{ path('article_list') }}" id="search-article">
			{{ form_label(form_search.title, 'Recherche', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.title) }}

			{{ form_label(form_search.type, 'Type', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.type) }}

            {{ form_label(form_search.beginHDate, 'Début', {'label_attr': {'class': 'mr-sm-2'}}) }}
            {{ form_widget(form_search.beginHDate) }}

            {{ form_label(form_search.endHDate, 'Fin', {'label_attr': {'class': 'mr-sm-2'}}) }}
            {{ form_widget(form_search.endHDate) }}

			{{ form_rest(form_search) }}
			<div class="col-3">
				<button class="btn btn-primary btn-sm">
					<i class="fa fa-search" aria-hidden="true"></i>Rechercher
				</button>
				<button type="button" class="btn btn-default btn-sm btn-reset">
					<i class="fa fa-undo" aria-hidden="true"></i>Effacer filtres
				</button>
			</div>
		</form>
	</div>
</div>

<div>
	<table data-toggle="table" class="table table-striped table-bordered table-sm">
		<thead>
			<tr class="active">
				<th width="20%">Titre</th>
				<th width="20%">Type</th>
				<th>Date Début</th>
				<th>Date Fin</th>
				<th>Derniere edition</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for key, article in articles %}
			<tr id="harticle-{{ article.entityId }}" data-harticle="">
				<td width="20%">{{ article.title }}</td>
				<td width="20%">{{ article.type }}</td>
				<td>{% if article.beginHDate is not null %}{{ article.beginHDate.label }}{% endif %}</td>
				<td>{% if article.endHDate is not null %}{{ article.endHDate.label }}{% endif %}</td>
				<td></td>
				<td><a class="hbase-article-displayer" target="harticle-{{ article.entityId }}"><i class="fa fa-eye" aria-hidden="true"></i></a>&nbsp;
					<a href="{{ path('article_edit',{'article':article.entityId}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
			</tr>
			{% else %}
			<tr>
				<td colspan="4" class="text-center">Pas d'article disponible</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>


{% include'AppBundle::pagination.html.twig' %}


<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" onClick="$('#myModal').modal()">Open Modal</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

