<div class="highlight row">
	<div class="col-12 mb-2">
		<form class="form-inline" method="post" id="search-site">
			{{ form_label(form_search.label, 'Nom', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.label,  {'attr': {'class': 'form-control form-control-sm mb-2 mr-sm-2 mb-sm-0'}}) }}

			{{ form_label(form_search.number, 'Numéro', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.number,  {'attr': {'class': 'form-control form-control-sm mb-2 mr-sm-2 mb-sm-0'}}) }}

			{{ form_label(form_search.accompaniment, 'Accompagnement', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.accompaniment,  {'attr': {'class': 'form-control form-control-sm mb-2 mr-sm-2 mb-sm-0'}}) }}

			{{ form_rest(form_search) }}
		</form>
	</div>
	<div class="col-3">
		<button class="btn btn-primary btn-sm" form="search-site">
			<i class="fa fa-search" aria-hidden="true"></i> Filter
		</button>
		<button type="button" class="btn btn-default btn-sm btn-reset"
			data-form="search-site">
			<i class="fa fa-undo" aria-hidden="true"></i> Vider
		</button>
	</div>
	<div class="ml-auto col-3 pull-right">
		<button type="button" class="btn btn-primary btn-sm" id="add-site">
			<i class="fa fa-plus" aria-hidden="true"></i> Ajout
		</button>
		<button type="button" class="btn btn-primary btn-sm" id="import-site">
			<i class="fa fa-upload" aria-hidden="true"></i> Import
		</button>
		<button class="btn btn-warning btn-sm" form="search-site"
			formaction="{{ path('synerail.export.site') }}">
			<i class="fa fa-download" aria-hidden="true"></i> Export
		</button>
	</div>
</div>

<div>
	<table class="table table-striped table-bordered table-sm">
		<thead>
			<tr class="active">
				<th width="20%">Titre</th>
				<th>Derniere edition</th>
				<th>Date Début</th>
				<th>Date Fin</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for key, site in sites %}
			<tr>
				<td width="50%">{{ site.label }}</td>
				<td width="21%">{{ site.number }}</td>
				<td width="21%">{% if site.accompaniment == 1 %} Oui {% else %}
					Non {% endif %}</td>
				<td width="8%" class="text-center">{{ table_action[key]|raw }}
				</td>
			</tr>
			{% else %}
			<tr>
				<td colspan="4" class="text-center">Pas d'article disponible</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>


{% include'AppBundle::pagination.html.twig' %}

