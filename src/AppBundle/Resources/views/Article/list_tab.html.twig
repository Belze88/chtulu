<div class="highlight row">
	<div class="col-12 mb-2">
		<form class="form-inline" method="post" id="search-site">
			{{ form_label(form_search.title, 'Titre', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.title,  {'attr': {'class': 'form-control form-control-sm mb-2 mr-sm-2 mb-sm-0'}}) }}

			{{ form_label(form_search.type, 'Type', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.type,  {'attr': {'class': 'form-control form-control-sm mb-2 mr-sm-2 mb-sm-0'}}) }}

			{{ form_label(form_search.subType, 'Sous-type', {'label_attr': {'class': 'mr-sm-2'}}) }}
			{{ form_widget(form_search.subType,  {'attr': {'class': 'form-control form-control-sm mb-2 mr-sm-2 mb-sm-0'}}) }}

			{{ form_rest(form_search) }}
		</form>
	</div>
	<div class="col-3">
		<button class="btn btn-primary btn-sm" form="search-site">
			<i class="fa fa-search" aria-hidden="true"></i> Filter
		</button>
		<button type="button" class="btn btn-default btn-sm btn-reset"
			data-form="search-site">
			<i class="fa fa-undo" aria-hidden="true"></i> Vider
		</button>
	</div>
	<div class="ml-auto col-3 pull-right">
		<button type="button" class="btn btn-primary btn-sm" id="add-site">
			<i class="fa fa-plus" aria-hidden="true"></i> Ajout
		</button>
		<button type="button" class="btn btn-primary btn-sm" id="import-site">
			<i class="fa fa-upload" aria-hidden="true"></i> Import
		</button>
		<button class="btn btn-warning btn-sm" form="search-site"
			formaction="{{ path('homepage') }}">
			<i class="fa fa-download" aria-hidden="true"></i> Export
		</button>
	</div>
</div>

<div>
	<table class="table table-striped table-bordered table-sm">
		<thead>
			<tr class="active">
				<th width="20%">Titre</th>
				<th width="20%">Type</th>
				<th>Date DÃ©but</th>
				<th>Date Fin</th>
				<th>Derniere edition</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for key, article in articles %}
			<tr>
				<td width="20%">{{ article.title }}</td>
				<td width="20%">{{ article.type }}</td>
				<td>{% if article.beginHDate != null %}{{ article.beginHDate }}{% endif %}</td>
				<td>{% if article.endHDate != null %}{{ article.endHDate.label }}{% endif %}</td>
				<td>{{ article.editionDate|date("m/d/Y") }}</td>
			</tr>
			{% else %}
			<tr>
				<td colspan="4" class="text-center">Pas d'article disponible</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>


